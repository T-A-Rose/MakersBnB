<h1 style = "text-align: center;">List your advert here!</h1>

<% if properties.empty? %>
  There are no logins currently, would you like to create one?
    <p>
      <a href="/Makersbnb/new_property">
        <button> Signup here </button>
      </a>
    </p>
<%else%>
  <% properties.each_with_index do |listing| %>
  <article>
    <u><h2 style ="text-align: center;">Current Properties" </h2>
    <u><h4> Property name</u>: <%= listing.property_name %> </h4>
    <u><h4> Propety description</u>: <%= listing.description%> </h4>
    <u><h4> Property price</u>: <%= listing.price %> </h4>

    <p>
      <a href="/MakersBnB/<%= listing.id %>/booking">
        <button>Book stay at: <%= listing.property_name%></button>
      </a>
    </p>
  </article>
  <%end%>
<%end%>
